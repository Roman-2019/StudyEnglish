@model IEnumerable<SEnglish.Models.AudioViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p style="color:white; font-size:16px;">
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table" style="color:white; font-size:16px;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AudioPath)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            @*<td>
                    <img src="@Url.Content(item.AudioPath)" width="240" height="180" />
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.AudioPath)
            </td>
            <td style="color:white">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>