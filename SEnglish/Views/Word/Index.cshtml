@model IEnumerable<SEnglish.Models.WordViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p style="color:white; font-size:16px;">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" style="color:white">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RussianWord)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EnglishWord)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TopicViewModelId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RussianWord)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnglishWord)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TopicViewModelId)
            </td>
            <td style="color:white">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
